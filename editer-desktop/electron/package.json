{
  "name": "cokee",
  "productName": "Cokee",
  "author": "cokewise.com",
  "license": "MIT",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "win": "rm -rf dist && electron-builder --win",
    "mac": "rm -rf dist && electron-builder --mac"
  },
  "description": "desktop markdown editor application",
  "build": {
    "electronVersion": "9.0.2",
    "appId": "com.cokewise.cokee",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "copyright": "Copyright Â© 2020 ${author}",
    "publish": [{
      "provider": "generic",
      "url": "https://download.cokewise.com/cokee"
    }],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "publisherName": "${author}"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false,
      "installerIcon": "assets/icon.ico"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "assets/appdmgwitharrow.png",
      "icon": "assets/icon.icns",
      "iconSize": 80,
      "contents": [{
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 100,
          "y": 180,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 350
      }
    }
  },
  "devDependencies": {
    "electron": "^9.0.2"
  },
  "dependencies": {
    "electron-store": "^5.2.0",
    "electron-updater": "^4.3.1"
  }
}
